{% extends 'base.html.twig' %}

{% block title %}Merges Resquests{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .imgAuthor {
            lenght : 20px;
        }
    </style>

    <div>
        {% for request in requests %}

            <ul>
                <li>Nom : {{ request.title }} </li>
                <li>Votes : +{{ request.upvotes }} | -{{ request.downvotes }}</li>
                <li>Auteur : {{ request.author.username}} <img class="imgAuthor" src="{{ request.author.avatar_url }}"></li>
                <li>Tags :
                    {% for tags in request.labels %}
                        {{ tags }}
                    {% endfor %}
                </li>
                <li>Nombre de commentaires : {{ request.user_notes_count }}</li>

            </ul>

        {% endfor %}


    </div>

{% endblock %}
