{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <div class="text-center mt-4">
        <h1 class="text-center mb-4">Teams</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="row">Name</th>
                <th scope="row">Avatar</th>
                <th scope="row">Projects</th>
                <th scope="row">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.name|upper }}</td>
                    <td><img class="img img-thumbnail" height="60" width="60" src="{{ team.urlPicture }}"></td>
                    <td> {% for tea in team.projects %}
                            {{ tea.name }}
                            {% endfor %}
                    </td>
                    <td width="200">
                        <a class="btn btn-info" href="{{ path('team_show', {'id': team.id}) }}">Show</a>
                        <a class="btn btn-info" href="{{ path('team_edit', {'id': team.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-right mr-5">
            <a class="btn btn-info" href="{{ path('team_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
