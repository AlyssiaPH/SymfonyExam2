{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="text-center">{{ team.name }}</h1>
        <div class="text-left mb-3 mt-3">
            <a class="btn btn-primary" href="{{ path('team_index') }}">back to list</a>

        </div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="row">Name</th>
                <th scope="row">Avatar</th>
                <th scope="row">Project</th>
                <th scope="row">Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ team.name|upper }}</td>
                <td><img class="img img-thumbnail" height="60" width="60" src="{{ team.urlPicture }}"></td>
                <td>{{ team.project }}</td>
                <td width="200">
                    <a class="btn btn-primary" href="{{ path('team_edit', {'id': team.id}) }}">Edit</a>
                    <a class="btn btn-primary">{{ include('team/_delete_form.html.twig') }}</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>


{% endblock %}
