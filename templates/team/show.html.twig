{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="text-center">{{ team.name }}</h1>
        <div class="text-left mb-3 mt-3">
            <a class="btn btn-primary" href="{{ path('team_index') }}">Back</a>

        </div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="row">Name</th>
                <th scope="row">Avatar</th>
                <th scope="row">Projects</th>
                <th scope="row">Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ team.name|upper }}</td>
                <td><img class="img img-thumbnail" height="60" width="60" src="{{ team.urlPicture }}"></td>
                <td> {% for tea in team.projects %}
                        {{ tea.name }}
                    {% endfor %}
                </td>
                <td>
                    <div class="mb-2">
                        <a class="btn btn-primary" href="{{ path('team_edit', {'id': team.id}) }}">Edit</a>
                    </div>
                    <div>
                        <a>{{ include('team/_delete_form.html.twig') }}</a>

                    </div>
                </td>
            </tr>
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Nom du merge</th>
                    <th>Description du merge</th>
                    <th>Update du merge</th>
                </tr>
            </thead>
            <tbody>
                {% for item in merges %}
                    <tr>
                        <td>{{ item.title }}</td>
                        <td>{{ item.description }}</td>
                        <td>{{ item.updated_at | date('m/d/Y H:m') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>


{% endblock %}
