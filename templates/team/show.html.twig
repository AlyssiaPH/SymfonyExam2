{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="text-left mb-3 mt-3">
            <h1 class="text-center">{{ team.name }}</h1>
            <a class="btn btn-info ml-3" href="{{ path('team_index') }}">Back</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="row">Name</th>
                <th scope="row">Avatar</th>
                <th scope="row">Projects</th>
                <th scope="row">Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ team.name|upper }}</td>
                <td><img class="img img-thumbnail" height="60" width="60" src="{{ team.urlPicture }}"></td>
                <td> {% for item in merges %}
                        <li><a href="/team/merges/{{ team.id }}/{{ item.idGit }}" >{{ item.name|title }}</a></li>
                    {% endfor %}
                </td>
                <td>
                    <div class="mb-2">
                        <a class="btn btn-info" href="{{ path('team_edit', {'id': team.id}) }}">Edit</a>
                    </div>
                    <div>
                        <a>{{ include('team/_delete_form.html.twig') }}</a>

                    </div>
                </td>
            </tr>
            </tbody>
        </table>




    </div>


{% endblock %}
